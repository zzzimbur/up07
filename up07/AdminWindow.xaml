<Window x:Class="up07.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:up07"
        mc:Ignorable="d"
        Title="Панель администратора" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--шапка-->
        <Border Grid.Row="0" Background="#ff5722">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20 0">
                    <TextBlock Text="👤" FontSize="24" Foreground="White" Margin="0 0 10 0"/>
                    <StackPanel>
                        <TextBlock x:Name="UserNameTextBlock"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="Администратор"
                                   FontSize="12"
                                   Foreground="#ffe0db"/>
                    </StackPanel>
                </StackPanel>
                <Button Content="Выход"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0 0 20 0"
                        Width="100"
                        Height="35"
                        Background="#d32f2f"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LogoutButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#b71c1c"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!--Содержимое-->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!--Заголовок-->
            <TextBlock Grid.Row="0"
                       Text="Управление пользователями"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0 0 0 15"/>
            
            <!--таблица пользователей-->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="10">
                <DataGrid x:Name="UsersDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#f9f9f9"
                          SelectionChanged="UsersDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="60"/>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="логин" Binding="{Binding Login}" Width="150"/>
                        <DataGridTextColumn Header="Роль" Binding="{Binding RoleName}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <!--Панель управления-->
            <Border Grid.Row="2"
                    Background="White"
                    CornerRadius="10"
                    Margin="0 15 0 0"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--Изменить логин-->
                    <StackPanel Grid.Column="0" Margin="0 0 10 0">
                        <TextBlock Text="Новый логин:" FontSize="13" Foreground="#555" Margin="0 0 0 5"/>
                        <TextBox x:Name="NewLoginTextBox" Height="35" FontSize="14" Padding="8"/>
                        <Button Content="Изменить логин"
                                Height="35"
                                Margin="0 10 0 0"
                                Background="#ff9800"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ChangeLoginButton_Click"/>
                    </StackPanel>
                    
                    <!--Изменить пароль-->
                    <StackPanel Grid.Column="1" Margin="10 0">
                        <TextBlock Text="Новый пароль:" FontSize="13" Foreground="#555" Margin="0 0 0 5"/>
                        <PasswordBox x:Name="NewPasswordBox" Height="35" FontSize="14" Padding="8"/>
                        <Button Content="Изменить пароль"
                                Height="35"
                                Margin="0 10 0 0"
                                Background="#2196f3"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ChangePasswordButton_Click"/>
                    </StackPanel>
                    
                    <!--Изменить роль-->
                    <StackPanel Grid.Column="2" Margin="10 0 0 0">
                        <TextBlock Text="Новая роль" FontSize="13" Foreground="#555" Margin="0 0 0 5"/>
                        <ComboBox x:Name="RoleComboBox" Height="35" FontSize="14">
                            <ComboBoxItem Content="Администратор" Tag="1"/>
                            <ComboBoxItem Content="Врач" Tag="2"/>
                            <ComboBoxItem Content="Пользователь" Tag="3"/>
                        </ComboBox>
                        <Button Content="Изменить роль"
                                Height="35"
                                Margin="0 10 0 0"
                                Background="#9c27b0"
                                Foreground="white"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ChangeRoleButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
