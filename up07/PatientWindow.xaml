<Window x:Class="up07.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:up07"
        mc:Ignorable="d"
        Title="Личный кабинет пациента" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#4CAF50">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="🏥" FontSize="24" Foreground="White" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock x:Name="UserNameTextBlock" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"/>
                        <TextBlock Text="Пациент" 
                                   FontSize="12" 
                                   Foreground="#C8E6C9"/>
                    </StackPanel>
                </StackPanel>
                <Button Content="Выход" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Width="100"
                        Height="35"
                        Background="#388E3C"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LogoutButton_Click"/>
            </Grid>
        </Border>

        <!-- Содержимое -->
        <Grid Grid.Row="1" Margin="20">
            <TabControl>
                <!-- Вкладка: Мои записи -->
                <TabItem Header="Мои записи">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="White" 
                                CornerRadius="10">
                            <DataGrid x:Name="MyAppointmentsDataGrid" 
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      BorderThickness="0"
                                      Background="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding AppointmentId}" Width="60"/>
                                    <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="*"/>
                                    <DataGridTextColumn Header="Дата и время" Binding="{Binding AppointmentDate, StringFormat=dd.MM.yyyy HH:mm}" Width="150"/>
                                    <DataGridTextColumn Header="Кабинет" Binding="{Binding Cabinet}" Width="100"/>
                                    <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Right">
                            <Button Content="Записаться на прием" 
                                    Width="180"
                                    Height="40" 
                                    Margin="0,0,10,0"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="MakeAppointmentButton_Click"/>
                            <Button Content="Отменить запись" 
                                    Width="150"
                                    Height="40" 
                                    Background="#F44336"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="CancelAppointmentButton_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Вкладка: История записей -->
                <TabItem Header="История записей">
                    <Grid Margin="10">
                        <Border Background="White" 
                                CornerRadius="10">
                            <DataGrid x:Name="HistoryDataGrid" 
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      BorderThickness="0"
                                      Background="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Дата" Binding="{Binding AppointmentDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                                    <DataGridTextColumn Header="Время" Binding="{Binding AppointmentDate, StringFormat=HH:mm}" Width="80"/>
                                    <DataGridTextColumn Header="Врач" Binding="{Binding DoctorName}" Width="*"/>
                                    <DataGridTextColumn Header="Кабинет" Binding="{Binding Cabinet}" Width="100"/>
                                    <DataGridTextColumn Header="Диагноз" Binding="{Binding Diagnosis}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Вкладка: Личный кабинет -->
                <TabItem Header="Личный кабинет">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Border Background="White" 
                                CornerRadius="10"
                                Margin="10"
                                Padding="30">
                            <StackPanel MaxWidth="500">
                                <TextBlock Text="Личная информация" 
                                           FontSize="20" 
                                           FontWeight="Bold"
                                           Foreground="#333"
                                           Margin="0,0,0,20"/>
                                <!-- ФИО -->
                                <TextBlock Text="ФИО:" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <TextBox x:Name="FIOTextBox" Height="35" FontSize="14" Padding="10,8" 
                                         BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,15"/>

                                <!-- Дата рождения (только чтение) -->
                                <TextBlock Text="Дата рождения:" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <TextBox x:Name="BirthDateTextBox" Height="35" FontSize="14" Padding="10,8" 
                                         BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,15"
                                         IsReadOnly="True" Background="#F5F5F5"/>

                                <!-- Рост -->
                                <TextBlock Text="Рост (см):" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <TextBox x:Name="HeightTextBox" Height="35" FontSize="14" Padding="10,8" 
                                         BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,15"/>

                                <!-- Вес -->
                                <TextBlock Text="Вес (кг):" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <TextBox x:Name="WeightTextBox" Height="35" FontSize="14" Padding="10,8" 
                                         BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,15"/>

                                <!-- Телефон (только чтение) -->
                                <TextBlock Text="Телефон:" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <TextBox x:Name="PhoneTextBox" Height="35" FontSize="14" Padding="10,8" 
                                         BorderBrush="#BDBDBD" BorderThickness="1" Margin="0,0,0,20"
                                         IsReadOnly="True" Background="#F5F5F5"/>

                                <!-- Кнопка сохранения -->
                                <Button Content="Сохранить изменения" 
                                        Height="40" 
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="SaveProfileButton_Click"/>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
